<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.springframework.org/schema/beans"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean class="org.springframework.jdbc.datasource.SimpleDriverDataSource" id="dataSource">
    <property name="driverClass" value="com.mysql.jdbc.Driver"/>
    <property name="url" value="jdbc:mysql://localhost/tobe"/>
    <property name="username" value="spring"/>
    <property name="password" value="root1234"/>
  </bean>

  <bean class="spring.ex.tobe.user.dao.UserDaoJdbc" id="userDao">
    <property name="dataSource" ref="dataSource"/>
  </bean>

  <bean class="spring.ex.tobe.user.service.OrdinaryUserLevelUpgradePolicy"
    id="userLevelUpgradePolicy"/>

  <bean class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
    id="transactionManager">
    <property name="dataSource" ref="dataSource"/>
  </bean>

  <bean class="spring.ex.tobe.user.service.DummyMailSender" id="mailSender">
    <property name="host" value="mail.server.com"/>
  </bean>

  <bean class="spring.ex.tobe.user.service.UserServiceImpl" id="userServiceImpl">
    <property name="userDao" ref="userDao"/>
    <property name="userLevelUpgradePolicy" ref="userLevelUpgradePolicy"/>
    <property name="mailSender" ref="mailSender"/>
  </bean>

<!--  <bean class="spring.ex.tobe.user.service.UserServiceTx" id="userService">-->
<!--    <property name="userService" ref="userServiceImpl"/>-->
<!--    <property name="transactionManager" ref="transactionManager"/>-->
<!--  </bean>-->


  <bean class="spring.ex.tobe.user.service.TxProxyFactoryBean" id="txProxyFactoryBean">
    <property name="target" ref="userServiceImpl"/>
    <property name="pattern" value="upgradeLevels"/>
    <property name="serviceInterface" value="spring.ex.tobe.user.service.UserService"/>
    <property name="transactionManager" ref="transactionManager"/>
  </bean>


  <bean class="spring.ex.tobe.user.service.TransactionAdvice" id="transactionAdvice">
    <property name="transactionManager" ref="transactionManager"/>
  </bean>


  <bean class="org.springframework.aop.support.NameMatchMethodPointcut" id="transactionPointcut">
    <property name="mappedName" value="upgrade*"/>
  </bean>


  <bean class="org.springframework.aop.support.DefaultPointcutAdvisor" id="transactionAdvisor">
    <property name="pointcut" ref="transactionPointcut"/>
    <property name="advice" ref="transactionAdvice"/>
  </bean>


  <bean class="org.springframework.aop.framework.ProxyFactoryBean" id="userService">
    <property name="target" ref="userServiceImpl"/>
    <property name="interceptorNames"> <!-- 어드바이스와 어드바이저를 동시에 설정할 수 있는 프로퍼티 -->
      <list>
        <value>transactionAdvisor</value>
      </list>
    </property>
  </bean>
</beans>
